{
  "name": "prism-design-system",
  "version": "0.1.31",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.cts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.cjs",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.cts"
    },
    "./style": {
      "import": "./dist/index.css",
      "require": "./dist/index.css"
    },
    "./global.css": {
      "default": "./dist/style/globals.css"
    },
    "./_variables.css": {
      "default": "./dist/style/_variables.css"
    },
    "./theme.css": {
      "default": "./dist/style/theme.css"
    }
  },
  "sideEffects": [
    "dist/**/*",
    "./src/**/*.css"
  ],
  "keywords": [
    "design-system",
    "ui",
    "components"
  ],
  "author": "BlueWave Labs",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "build:tokens": "npx style-dictionary build --config ./sd.config.json",
    "prepare": "husky",
    "release": "npm run build:pkg && standard-version",
    "build:pkg": "tsup"
  },
  "dependencies": {
    "@radix-ui/react-avatar": "^1.1.3",
    "@radix-ui/react-collapsible": "^1.1.3",
    "@radix-ui/react-dialog": "^1.1.7",
    "@radix-ui/react-dropdown-menu": "^2.1.6",
    "@radix-ui/react-separator": "^1.1.2",
    "@radix-ui/react-slot": "^1.1.2",
    "@radix-ui/react-switch": "^1.1.4",
    "@radix-ui/react-tabs": "^1.1.4",
    "@radix-ui/react-tooltip": "^1.1.8",
    "@tanstack/react-table": "^8.21.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.487.0",
    "next": "15.2.4",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "sanitize-html": "^2.15.0",
    "shiki": "^3.2.1",
    "tailwind-merge": "^3.1.0",
    "tw-animate-css": "^1.2.5"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@eslint/eslintrc": "^3.3.1",
    "@tailwindcss/postcss": "^4.1.3",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/sanitize-html": "^2.15.0",
    "@typescript-eslint/eslint-plugin": "^8.29.0",
    "@typescript-eslint/parser": "^8.29.0",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.23.0",
    "eslint-config-next": "^15.2.4",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-prettier": "^5.2.6",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^5.2.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.0",
    "postcss": "^8.5.3",
    "postcss-cli": "^11.0.1",
    "postcss-import": "^16.1.0",
    "prettier": "^3.5.3",
    "standard-version": "^9.5.0",
    "tsup": "^8.4.0",
    "typescript": "^5.8.2"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ],
    "exclude": [
      "node_modules",
      "build",
      "dist",
      ".next",
      "src/sd/**",
      "src/components/ui/**"
    ]
  },
  "style": "src/styles/globals.css"
}
